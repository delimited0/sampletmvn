
# rectangular test --------------------------------------------------------
n = 100

d = 2
mu = rep(0, d)
Sigma = .5 * diag(d) + .5 * rep(1, d) %*% t(rep(1, d))
lb = rep(0, d)
A = diag(d)

rsm_samples = sampletmvn::sample_rsm(n, mu, Sigma, lb, ub, A)

plot(rsm_samples)

